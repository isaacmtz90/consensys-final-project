{
    "extends": ["airbnb","prettier"],
    "globals" : {
      "artifacts": false,
      "contract": false,
      "assert": false,
      "web3": false
    },
    "env": {
      "browser" : true,
      "node"    : true,
      "mocha"   : true,
      "jest"    : true
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", { "packageDir": "./" }],
        "import/prefer-default-export": "off",
        "max-len": [2, 120],
        "class-methods-use-this": 0,
        "curly": "error",
        "prefer-arrow-callback": 0,
        "arrow-parens": [2, "always"],        
        "quote-props": "off"
      }
}